<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ihsan.cricplanet.ui.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_matchDetailTabLayoutFragment"
            app:destination="@id/matchDetailTabLayoutFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/matchesFragment"
        android:name="com.ihsan.cricplanet.ui.fragment.MatchesFragment"
        android:label="fragment_matches"
        tools:layout="@layout/fragment_matches" >
        <argument
            android:name="category"
            app:argType="string"
            app:nullable="true"
            android:defaultValue='""' />
    </fragment>
    <fragment
        android:id="@+id/matchTabLayoutFragment"
        android:name="com.ihsan.cricplanet.ui.fragment.viewpager.MatchTabLayoutFragment"
        android:label="fragment_match_tab_layout"
        tools:layout="@layout/fragment_match_tab_layout" >
        <action
            android:id="@+id/action_matchTabLayoutFragment_to_matchDetailTabLayoutFragment"
            app:destination="@id/matchDetailTabLayoutFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/action_matchTabLayoutFragment_to_matchesFragment"
            app:destination="@id/matchesFragment" />
    </fragment>
    <fragment
        android:id="@+id/matchDetailTabLayoutFragment"
        android:name="com.ihsan.cricplanet.ui.fragment.viewpager.MatchDetailTabLayoutFragment"
        android:label="fragment_match_detail_tab_layout"
        tools:layout="@layout/fragment_match_detail_tab_layout" >
        <argument
            android:name="matchId"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_matchDetailTabLayoutFragment_to_matchSquadsFragment"
            app:destination="@id/matchSquadsFragment" />
        <action
            android:id="@+id/action_matchDetailTabLayoutFragment_to_matchScorecardFragment"
            app:destination="@id/matchScorecardFragment" />
        <action
            android:id="@+id/action_matchDetailTabLayoutFragment_to_matchInfoFragment"
            app:destination="@id/matchInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/matchInfoFragment"
        android:name="com.ihsan.cricplanet.ui.fragment.matchdetails.MatchInfoFragment"
        android:label="fragment_match_info"
        tools:layout="@layout/fragment_match_info" >
        <argument
            android:name="match"
            app:argType="com.ihsan.cricplanet.model.fixture.FixtureByIdWithDetails"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/matchScorecardFragment"
        android:name="com.ihsan.cricplanet.ui.fragment.matchdetails.MatchScorecardFragment"
        android:label="fragment_match_scorecard"
        tools:layout="@layout/fragment_match_scorecard" >
        <argument
            android:name="match"
            app:argType="com.ihsan.cricplanet.model.fixture.FixtureByIdWithDetails"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/matchSquadsFragment"
        android:name="com.ihsan.cricplanet.ui.fragment.matchdetails.MatchSquadsFragment"
        android:label="fragment_match_squads"
        tools:layout="@layout/fragment_match_squads" >
        <argument
            android:name="match"
            app:argType="com.ihsan.cricplanet.model.fixture.FixtureByIdWithDetails"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/playerFragment"
        android:name="com.ihsan.cricplanet.ui.fragment.PlayerFragment"
        android:label="fragment_player"
        tools:layout="@layout/fragment_player" >
        <action
            android:id="@+id/action_playerFragment_to_playerDetailsTabLayoutFragment"
            app:destination="@id/playerDetailsTabLayoutFragment" />
    </fragment>
    <fragment
        android:id="@+id/seriesFragment"
        android:name="com.ihsan.cricplanet.ui.fragment.SeriesFragment"
        android:label="fragment_series"
        tools:layout="@layout/fragment_series" />
    <fragment
        android:id="@+id/rankingTabLayoutFragment"
        android:name="com.ihsan.cricplanet.ui.fragment.viewpager.RankingTabLayoutFragment"
        android:label="fragment_ranking_tab_layout"
        tools:layout="@layout/fragment_ranking_tab_layout" >
        <action
            android:id="@+id/action_rankingTabLayoutFragment_to_rankingFragment2"
            app:destination="@id/rankingFragment2" />
    </fragment>
    <fragment
        android:id="@+id/rankingFragment2"
        android:name="com.ihsan.cricplanet.ui.fragment.RankingFragment"
        android:label="RankingFragment" >
        <argument
            android:name="category"
            app:argType="string"
            app:nullable="true"
            android:defaultValue='""' />
        <argument
            android:name="rankingList"
            app:argType="com.ihsan.cricplanet.model.team.GlobalTeamRankingList"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/playerDetailsTabLayoutFragment"
        android:name="com.ihsan.cricplanet.ui.fragment.viewpager.PlayerDetailsTabLayoutFragment"
        android:label="fragment_player_details_tab_layout"
        tools:layout="@layout/fragment_player_details_tab_layout" >
        <action
            android:id="@+id/action_playerDetailsTabLayoutFragment_to_playerBowlingFragment"
            app:destination="@id/playerBowlingFragment" />
        <action
            android:id="@+id/action_playerDetailsTabLayoutFragment_to_playerBattingFragment"
            app:destination="@id/playerBattingFragment" />
        <action
            android:id="@+id/action_playerDetailsTabLayoutFragment_to_playerInfoFragment"
            app:destination="@id/playerInfoFragment" />
        <action
            android:id="@+id/action_playerDetailsTabLayoutFragment_to_playerCareerFragment"
            app:destination="@id/playerCareerFragment" />
        <argument android:name="playerId"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
    <fragment
        android:id="@+id/playerBattingFragment"
        android:name="com.ihsan.cricplanet.ui.fragment.playerdetails.PlayerBattingFragment"
        android:label="fragment_player_batting"
        tools:layout="@layout/fragment_player_batting" >
        <argument
            android:name="player"
            app:argType="com.ihsan.cricplanet.model.player.PlayerDetails"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/playerBowlingFragment"
        android:name="com.ihsan.cricplanet.ui.fragment.playerdetails.PlayerBowlingFragment"
        android:label="fragment_player_bowling"
        tools:layout="@layout/fragment_player_bowling" >
        <argument
            android:name="player"
            app:argType="com.ihsan.cricplanet.model.player.PlayerDetails"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/playerCareerFragment"
        android:name="com.ihsan.cricplanet.ui.fragment.playerdetails.PlayerCareerFragment"
        android:label="fragment_player_career"
        tools:layout="@layout/fragment_player_career" >
        <argument
            android:name="player"
            app:argType="com.ihsan.cricplanet.model.player.PlayerDetails"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/playerInfoFragment"
        android:name="com.ihsan.cricplanet.ui.fragment.playerdetails.PlayerInfoFragment"
        android:label="fragment_player_info"
        tools:layout="@layout/fragment_player_info" >
        <argument
            android:name="player"
            app:argType="com.ihsan.cricplanet.model.player.PlayerDetails"
            app:nullable="true" />
    </fragment>
</navigation>