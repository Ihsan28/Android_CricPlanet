<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view_match_squads_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ui.fragment.matchdetails.MatchSquadsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingVertical="1dp"
            android:text="@string/match_squad"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal">

            <GridView
                android:id="@+id/grid_view_squad_local"
                android:layout_width="match_parent"
                android:layout_height="700dp"
                android:layout_weight="1"
                android:horizontalSpacing="10dp"
                android:numColumns="1"
                android:padding="10dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp" />

            <GridView
                android:id="@+id/grid_view_squad_visitor"
                android:layout_width="match_parent"
                android:layout_height="700dp"
                android:layout_weight="1"
                android:horizontalSpacing="10dp"
                android:numColumns="1"
                android:padding="10dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>