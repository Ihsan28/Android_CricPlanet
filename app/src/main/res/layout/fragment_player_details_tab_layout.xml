<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.viewpager.PlayerDetailsTabLayoutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top_player_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/horizontalLine"
            android:backgroundTint="@color/colorPrimary">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="15dp"
                app:cardElevation="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/player_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Type"
                            android:minWidth="2dp"
                            android:textColor="@color/colorOnSecondary"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="15dp"
                        android:background="@color/horizontalLine" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|center"
                        android:paddingBottom="3dp"
                        android:orientation="horizontal">

                        <LinearLayout

                            android:id="@+id/team1_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:foregroundGravity="center"
                            android:gravity="center"
                            android:orientation="vertical">


                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="7dp"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="5dp">

                                <ImageView
                                    android:id="@+id/player_image"
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:maxHeight="150dp"
                                    android:minHeight="130dp"
                                    android:layout_gravity="center_horizontal"
                                    android:adjustViewBounds="true"
                                    android:contentDescription="@string/image_view"
                                    android:elevation="20dp"
                                    tools:src="@tools:sample/backgrounds/scenic" />
                            </androidx.cardview.widget.CardView>


                            <TextView
                                android:id="@+id/player_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:hint="Player"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/player_country"
                                android:layout_width="95dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:hint="@string/country"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout_player_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:contentDescription="@string/view_pager_card_view"
            app:tabGravity="center"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/cardview_light_background"
            app:tabTextColor="@color/colorPrimaryDark" />

        <ScrollView
            android:id="@+id/details_player_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager_2_player_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>
    </LinearLayout>
</ScrollView>
